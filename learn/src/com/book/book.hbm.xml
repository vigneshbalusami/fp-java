<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.book.Book" table="Book_Details">
		<id name="id" type="int" column="Book_Id">
			<generator class="increment" />
		</id>
		<property name="name" column="Book_Name" type="string" />
		<property name="publisher" column="publisher" type="string" />
		<property name="published" column="published" type="string" />
		<property name="author" column="Author_Name" type="string" />
		<property name="price" column="price" type="double" />
		<property name="isbnNo" column="ISBN_No" type="string" />
	</class>
</hibernate-mapping>